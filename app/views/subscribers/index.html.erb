<p id="notice"><%= notice %></p>

<h1 class="center">Subscribers</h1>
<br>
<br>
<br>

<div class="custom-container">
  <%= link_to 'Manual Add', new_subscriber_path, class: "custom-btn btn-second" %>
  <br>
  
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Active?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscribers.each do |subscriber| %>
      <tr>
        <td><%= subscriber.name %></td>
        <td><%= subscriber.email %></td>
        <td><%= subscriber.active %></td>
        <td><%= link_to 'Info', subscriber %></td>
        <td><%= link_to 'Edit', edit_subscriber_path(subscriber) %></td>
        <td><%= link_to 'Delete', subscriber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

