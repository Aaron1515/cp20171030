<!-- Fundamentals -->

<div class="custom-container center index-title">
	<%= link_to "Fundamentals", lesson_fundamental_path %>
</div>
		
<div class="custom-container index-box">

	<div>
		
		<!-- Module 1 -->
		<%= link_to lesson_fundamental_gpio_path do %>
			<div  class="each-mod">
				<div class="image">
					<%= image_tag "gpio1.png"%>
				</div>

				<div>
					<h2>GPIO Outputs</h2>
					<p>Learn the basics of GPIO pin usage on Raspberry Pi and how to manipulate them with Python</p>
				</div>
			</div>
		<% end %>

		<!-- Module 2 -->
		<%= link_to lesson_fundamental_loops_path do %>
			<div  class="each-mod">
				<div class="image">
					<%= image_tag "loops3.png"%>
				</div>

				<div>
					<h2>Loops</h2>
					<p>Understand the concept and application of a loop and how to use a For loop</p>
				</div>
			</div>
		<% end %>

		<!-- Module 3 -->
		<%= link_to lesson_fundamental_comparison_path do %>
			<div class="each-mod">
				<div class="image">
					<%= image_tag "compare2.png"%>
				</div>

				<div>
					<h2>Comparison Operators and Boolean Logic</h2>
					<p>Learn how Booleans fit as a conditional statement and how to use comparison operators</p>
				</div>
			</div>
		<% end %>

		<!-- Module 4 -->
		<%= link_to lesson_fundamental_conditional_path do %>
			<div class="each-mod">
				<div class="image">
					<%= image_tag "conditonal1.png"%>
				</div>


				<div>
					<h2>Conditionals</h2>
					<p>Learn the basics of using If statements, incorporating conditions, and setting GPIO pins as an input</p>
				</div>
			</div>
		<% end %>

		<!-- Module 5 -->
		<%= link_to lesson_fundamental_logic_path do %>
			<div class="each-mod">
				<div class="image">
					<%= image_tag "logic2.png"%>
				</div>

				<div>
					<h2>Logic Gates</h2>
					<p>Learn what a logic gate is and the three basic types: And, Or, and Not</p>
				</div>
			</div>
		<% end %>

	</div>

</div><!-- End of Fundamentals -->

